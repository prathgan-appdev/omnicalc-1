<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @apr.to_f.round(4).to_s(:percentage, {:precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @yrs %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @principal.round(2).to_s(:currency) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @payment.round(2).to_s(:currency) %>
  </dd>
</dl>

<a href="/payment/new">
  Calculate another payment
</a>
